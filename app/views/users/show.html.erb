        <%= form_for Part.new, :class => 'form center-block' do |f| %>
        <div class="form-group">
        <%= f.text_field :manufacturer, placeholder: "Manufacturer", :required => true , :class => 'form-control input-lg ' %><br>
        <%= f.text_field :name, placeholder: "Name", :required => true , :class => 'form-control input-lg' %><br>
        <%= f.text_field :price, placeholder: "Price", :required => true , :class => 'form-control input-lg ' %> <br>
        <%= f.text_field :qty, placeholder: "Quantity", value: 1,:class => 'form-control input-lg ' %> <br>
        <%= f.text_field :description, placeholder: "Description", :class => 'form-control input-lg' %><br>
        </div>

        <%= f.submit "Submit", :class => 'btn btn-primary btn-sm', :id => 'submit' %>

        <% end %>
    </div>
    </div>
</div>
</div>

